@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">🎬 Welcome to Movie Library</h1>
    <p class="lead">Explore, manage, and keep track of your favorite movies with our Movie Library system.</p>

    <div class="mt-5">
        <a asp-controller="Movie" asp-action="Index" class="btn btn-primary btn-lg">📜 View Movie List</a>
        <a asp-controller="Movie" asp-action="Create" class="btn btn-success btn-lg">➕ Add New Movie</a>
    </div>
</div>

<hr class="my-5">

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">🎥 Manage Your Movies</h5>
                <p class="card-text">  -Easily add, edit, and delete movies in your collection.</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">⭐ Rate and Review</h5>
                <p class="card-text">  -Keep track of movie ratings and personal reviews.</p>
            </div>
        </div>
    </div>
</div>
